{
  "name": "wlint",
  "version": "0.2.1",
  "description": "A Wonderful Linter Config Manager",
  "author": "wibus-wee <wibus@qq.com>",
  "license": "AGPLv3",
  "type": "module",
  "homepage": "https://github.com/wibus-wee/wlint#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wibus-wee/wlint.git"
  },
  "issues": "https://github.com/wibus-wee/wlint/issues",
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --ignore-path ./.prettierignore --write ",
      "eslint --cache --fix"
    ]
  },
  "bin": {
    "wlint": "index.js"
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "files": [
    "dist"
  ],
  "bump": {
    "leading": [
      "git pull --rebase"
    ],
    "publish": true,
    "changelog": true,
    "allowed_branches": [
      "main"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "scripts": {
    "prepare": "husky install",
    "build": "npm run typecheck && unbuild",
    "dev": "unbuild --stub",
    "start": "NODE_ENV=development node index.js",
    "lint": "eslint .",
    "prepublishOnly": "pnpm build",
    "typecheck": "tsc --noEmit",
    "lint-staged": "lint-staged"
  },
  "devDependencies": {
    "@innei-util/eslint-config-ts": "0.8.2",
    "@innei-util/prettier": "0.8.2",
    "@innei/eslint-config-ts": "0.10.1",
    "@types/cross-spawn": "^6.0.2",
    "@types/minimist": "^1.2.2",
    "@types/node": "18.16.18",
    "@types/prompts": "^2.4.4",
    "cross-spawn": "^7.0.3",
    "eslint": "8.43.0",
    "husky": "8.0.3",
    "kolorist": "^1.8.0",
    "lint-staged": "13.2.2",
    "minimist": "^1.2.8",
    "pnpm": "8.6.4",
    "prettier": "2.8.8",
    "prompts": "^2.4.2",
    "rimraf": "5.0.1",
    "typescript": "5.1.3",
    "unbuild": "1.2.1",
    "vite": "4.3.9",
    "vitest": "0.32.2"
  },
  "dependencies": {
    "got": "12.6.1"
  }
}
