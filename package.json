{
  "name": "wlint",
  "version": "0.0.0",
  "description": "A Wonderful Linter Config Manager",
  "author": "wibus-wee <wibus@qq.com>",
  "license": "AGPLv3",
  "homepage": "https://github.com/wibus-wee/wlint#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wibus-wee/wlint.git"
  },
  "issues": "https://github.com/wibus-wee/wlint/issues",
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --ignore-path ./.prettierignore --write ",
      "eslint --cache --fix"
    ]
  },
  "bin": {
    "wlint": "index.js"
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*",
        "./dist/index.d.ts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "bump": {
    "leading": [
      "git pull --rebase"
    ],
    "publish": true,
    "changelog": true,
    "allowed_branches": [
      "main"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "scripts": {
    "prepare": "husky install",
    "build": "npm run typecheck && unbuild",
    "dev": "unbuild --stub",
    "lint": "eslint .",
    "prepublishOnly": "pnpm build",
    "typecheck": "tsc --noEmit",
    "lint-staged": "lint-staged"
  },
  "devDependencies": {
    "@innei-util/eslint-config-ts": "0.8.2",
    "@innei-util/prettier": "0.8.2",
    "@innei/eslint-config-ts": "0.9.6",
    "@types/node": "18.11.18",
    "bumpp": "8.2.1",
    "eslint": "8.30.0",
    "esno": "0.16.3",
    "husky": "8.0.2",
    "lint-staged": "13.1.0",
    "pnpm": "7.17.1",
    "prettier": "2.8.1",
    "rimraf": "3.0.2",
    "typescript": "4.9.4",
    "unbuild": "1.0.2",
    "vite": "3.2.5",
    "vitest": "0.26.2"
  }
}
